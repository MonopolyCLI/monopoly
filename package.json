{
  "scripts": {
    "prelint:watch": "npm run lint",
    "lint:watch": "onchange services.json targets.json 'src/**/*' -- prettier --write -u {{file}}",
    "lint": "prettier --write -u 'src/**/*' services.json targets.json",
    "init": "node src clone && node src install",
    "status": "node src status"
  },
  "devDependencies": {
    "@aws-sdk/client-secrets-manager": "^3.266.1",
    "chalk": "^4",
    "onchange": "^7.1.0",
    "prettier": "^2.8.1",
    "prompts": "^2.4.2"
  }
}
